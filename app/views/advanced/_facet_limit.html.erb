<ul>
  <% display_facet.items.each do |item| -%>
  <li>
    <%= label_tag "f_inclusive_#{solr_field}[#{item.value.to_sym}]", (check_box_tag "f_inclusive[#{solr_field}][#{item.value.to_sym}]", 1, facet_value_checked?(solr_field, item.value)) + content_tag(:span, facet_display_value(solr_field, item), :class => 'facet-value') + " " + render_facet_count(item.hits), :class => 'checkbox' %>
  </li>
  <% end -%>
</ul>
